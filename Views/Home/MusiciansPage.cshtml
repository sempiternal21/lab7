@model IEnumerable<lab7.Models.Musician>;
<!DOCTYPE html>
<html>
</html>
<div class="text-center" style="background-color: deepskyblue">
    <h2>@ViewData["Title"]</h2>
    <div class="band-list">
        <table>
            <tr>
                <th>Id</th>
                <th>Имя</th>
                <th>Возраст</th>
                <th>Группа</th>
                <th>Инструмент</th>
                <th>Управление</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Age</td>
                    <td>@Html.ActionLink(item.Band, "EditMusiciansBand", "Home", new { bandName = item.Band })</td>
                    <td>@Html.ActionLink(item.Instrument, "EditMusiciansInstrument", "Home", new { instrumentName = item.Instrument })</td>
                    <td>
                        @Html.ActionLink("Изменить", "EditMusician", item)
                        @Html.ActionLink("Удалить", "DeleteMusician", item)
                    </td>
                </tr>
            }
        </table>
        <div class="band-list">
            @Html.ActionLink("Добавить нового музыканта", "CreateMusician")
        </div>
    </div>



</div>
