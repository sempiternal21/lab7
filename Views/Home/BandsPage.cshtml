@model IEnumerable<lab7.Models.Band>;
<!DOCTYPE html>
<html>
</html>
<div class="text-center" style="background-color: deepskyblue">
    <h2>@ViewData["Title"]</h2>
    <div class="band-list">
        <table>
            <tr>
                <th>Id</th>
                <th>Название</th>
                <th>Год основания</th>
                <th>Страна</th>
                <th>Управление</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Year</td>
                    <td>@item.Country</td>
                    <td>
                        @Html.ActionLink("Изменить", "EditBand", item)
                        @Html.ActionLink("Удалить", "DeleteBand", item)
                    </td>
                </tr>
            }
        </table>
        <div class="band-list">
            @Html.ActionLink("Добавить новую группу", "CreateBand")
        </div>
    </div>

</div>
