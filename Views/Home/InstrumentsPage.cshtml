@model IEnumerable<lab7.Models.Instrument>;
<!DOCTYPE html>
<html>
</html>
<div class="text-center" style="background-color: deepskyblue">
    <h2>@ViewData["Title"]</h2>
    <div class="band-list">
        <table>
            <tr>
                <th>Id</th>
                <th>Название</th>
                <th>Тип</th>
                <th>Управление</th>
            </tr>
            @foreach (var item in Model)
            {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Type</td>
            <td>
                @Html.ActionLink("Изменить", "EditInstrument", item)
                @Html.ActionLink("Удалить", "DeleteInstrument", item)
            </td>
        </tr>
            }
        </table>
        <div class="band-list">
            @Html.ActionLink("Добавить новый инструмент", "CreateInstrument")
        </div>
    </div>

</div>
